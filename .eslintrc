{
  "extends": ["@iteam/eslint-config-react"],
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "parserOptions": {
    "ecmaFeatures": {
      "modules": true
    },
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "overrides": [
    {
      "files": ["**/*.tsx", "**/*.ts"],
      "rules": {
        "no-undef": "off",
        "no-unused-vars": "off",
        "react/prop-types": "off"
      }
    }
  ]
}
